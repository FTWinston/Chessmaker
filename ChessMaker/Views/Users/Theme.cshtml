@model ChessMaker.Models.ThemeModel
@{
    Layout = null;
}

#render .cell.light{fill:#@Model.BoardLight;}
#render .cell.mid{fill:#@Model.BoardMid;}
#render .cell.dark{fill:#@Model.BoardDark;}

#render .cell.lightStroke, .detail.lightStroke {stroke:#@Model.BoardLight;}
#render .cell.midStroke, .detail.midStroke{stroke:#@Model.BoardMid;}
#render .cell.darkStroke, .detail.darkStroke{stroke:#@Model.BoardDark;}

#render .cell.light.lastMoveFrom {
    fill:url(#lastFromLight);
}

#render .cell.mid.lastMoveFrom {
    fill:url(#lastFromMid);
}

#render .cell.dark.lastMoveFrom {
    fill:url(#lastFromDark);
}

#render .cell.light.lastMoveTo {
    fill:url(#lastToLight);
}

#render .cell.mid.lastMoveTo {
    fill:url(#lastToMid);
}

#render .cell.dark.lastMoveTo {
    fill:url(#lastToDark);
}

#render .cell.selected.light{fill:#@Model.BoardLightSelected;}
#render .cell.selected.mid{fill:#@Model.BoardMidSelected;}
#render .cell.selected.dark{fill:#@Model.BoardDarkSelected;}

#render .cell.option.light{fill:#@Model.BoardLightHighlight;}
#render .cell.option.mid{fill:#@Model.BoardMidHighlight;}
#render .cell.option.dark{fill:#@Model.BoardDarkHighlight;}

#render .piece .lightStroke{stroke:#@Model.PieceLight;}
#render .piece .darkStroke{stroke:#@Model.PieceDark;}
#render .piece .lightFill{fill:#@Model.PieceLight;}
#render .piece .darkFill{fill:#@Model.PieceDark;}


#render defs .stopLight{
    stop-color:#@Model.BoardLight;
    stop-opacity:1;
}

#render defs .stopMid {
    stop-color:#@Model.BoardMid;
    stop-opacity:1
}

#render defs .stopDark {
    stop-color:#@Model.BoardDark;
    stop-opacity:1
}

#render defs .stopLightHighlight {
    stop-color:#@Model.BoardLightHighlight;
    stop-opacity:1;
}

#render defs .stopMidHighlight {
    stop-color:#@Model.BoardMidHighlight;
    stop-opacity:1
}

#render defs .stopDarkHighlight {
    stop-color:#@Model.BoardDarkHighlight;
    stop-opacity:1
}