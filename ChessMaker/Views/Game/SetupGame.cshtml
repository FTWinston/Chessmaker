@model ChessMaker.Models.GameSetupModel

@{
    ViewBag.Title = @Model.Heading;
    var variantOptions = new SelectList(Model.Variants, "VersionID", "Name");
}

@using (Html.BeginForm(@Model.SubmitAction, "Game")) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Game setup form</legend>
        <ol>
            <li>
                @Html.Label("variantSelect", "Variant")
                @Html.DropDownList("variantSelect", variantOptions)
            </li>

@if (Model.Difficulties != null)
{
            <li>
                @Html.Label("aiSelect", "Difficulty")
                @Html.DropDownList("aiSelect", new SelectList(Model.Difficulties, "ID", "Name"))
            </li>
}
@if (Model.PromptPlayerSelection)
{
            <li>
                You will be able to invite opponents from the next screen.
            </li>
}
        </ol>
        <input type="submit" value="@Model.ConfirmText" />
    </fieldset>
}